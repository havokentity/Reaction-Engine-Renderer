float4 main(float2 texcoord[4] : TEXCOORD0,
		uniform sampler2D sceneTex: TEXUNIT0) : COLOR
{
    return (tex2D(sceneTex, texcoord[0]) + 
            tex2D(sceneTex, texcoord[1]) +
            tex2D(sceneTex, texcoord[2]) +
            tex2D(sceneTex, texcoord[3])) * 0.25;

	//return (tex2D(sceneTex, texcoord[0]));
}