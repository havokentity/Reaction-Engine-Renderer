uniform float blendFactor = 1.0f;
uniform float glowFactor = 4.5f;
uniform float2 overlayProperties = {1, 0}; //overlay enabled, overlay time
float2 horizontalDir = {1.0/200.0, 0};
float2 verticalDir = {0, 1.0/200.0};


